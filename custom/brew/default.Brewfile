# ClarityOS Homebrew Packages
# Brewfile for installing packages with Homebrew on ClarityOS

# Development Tools
brew "git"
brew "gh"
brew "lazygit"

# Modern CLI Tools
brew "ripgrep"
brew "fd"
brew "fzf"
brew "bat"
brew "eza"
brew "zoxide"
brew "starship"

# System Tools
brew "htop"
brew "btop"
brew "ncdu"
brew "tldr"

# Container Tools
brew "dive"
brew "ctop"

# Fonts
cask "font-fira-code-nerd-font"
cask "font-jetbrains-mono-nerd-font"
cask "font-meslo-lg-nerd-font"
